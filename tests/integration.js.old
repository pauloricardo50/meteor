require('babel-polyfill');
const { Builder, By, promise, until, Key } = require('selenium-webdriver');
const test = require('selenium-webdriver/testing');
import ReactTestUtils from 'react-addons-test-utils';

// var describe = require('mocha').describe;
// var beforeEach = require('mocha').beforeEach;
// var afterEach = require('mocha').afterEach;
// var it = require('mocha').it;

describe('Test Start Form', function() {
  let driver;

  before(function() {
    this.timeout(10000);
    return new Builder().forBrowser('safari').build().then(d => {
      driver = d;
    });
  });

  after(function() {
    return driver.quit();
  });

  it('goes to the start 1 page', function() {
    this.timeout(10000);
    driver.manage().timeouts().implicitlyWait(10000);

    return driver
      .get('http://www.google.com/ncr')
      .then(_ => driver.findElement(By.name('q')).sendKeys('webdriver'))
      .then(_ => driver.findElement(By.name('btnG')).click())
      .then(_ => driver.wait(until.titleIs('webdriver - Google Search'), 1000))
      .then(_ => driver.quit());
  });
});
