[ignore]
.*/microservices/app/.meteor/.*\.json
.*/microservices/admin/.meteor/.*\.json
.*/microservices/www/.meteor/.*\.json
../../.meteor/.*\.json
.*/**/.npm/.*\.json
.*/**/node_modules/**/.*\.json
.*/node_modules/cypress/

[options]
module.name_mapper='^\/\(.*\)$' -> '<PROJECT_ROOT>/\1'
# Map core/ properly
module.name_mapper='^core' ->'<PROJECT_ROOT>/core'

# Use meteor packages from admin, as nested configs are not supported
# It is therefore assumed that any meteor package used in a microservice,
# is also used in admin, so that flow never complains
# https://github.com/facebook/flow/issues/238
# FIXME: Not working at the moment
# https://forums.meteor.com/t/work-in-progress-flowtype-typings/40978

