normalize-css()

// Grid, copied from bootstrap sizes
$xsmall = 340px
$small = 480px
$med = 768px
$large = 992px
$wide = 1200px

// Colors
black = #222;
grey = #D8D8D8;
light-grey = #EEE;

grey1 = #d8d8d8;
grey2 = #eee;
grey3 = #f8f8f8;

//Custom Colors
textcolor = #333333;
backgroundcolor = #FCFCFC;
brand-primary = #4990E2;
brand-success = #6ED2B1;
brand-warning = #F3AF50;
brand-danger = #B73E25;
brand-black = #051C2C;
brand-grey = #637E94;



z = {
  neg: -7,
  lowest: 1,
  low: 4,
  mid: 5,
  video: 6,
  header: 7,
  nav: 8,
  mini: 9,
  modal: 10,
  highest: 11
}

social = {
  twitter: #00aced,
  facebook: #3b5998,
  google: #dd4b39,
  youtube: #bb0000
}


$side-nav = 300px
$bottom-nav-height = 76px


/* Typography */
body
  background-color backgroundcolor
  color #444;
  line-height: 1.5em;
  font-size: 16px !important;
  font-family: 'Source Sans Pro', sans-serif !important;
  font-weight: 300 !important;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

body, html, main, #react-root
  width 100%
  height 100%

h1, h2, h3, h4, h5, h6
  color : #222;
  line-height: 1.1em;
  font-family: 'Source Sans Pro', sans-serif !important;
  font-weight: 300 !important;

h1
  font-size: 2em;
  &.fixed-size
    font-size: 2em !important;
  +above($med)
    font-size: 2.5em;
  +above($wide)
    font-size: 3em;
  &.display1
    font-size: 3em;
    +above($med)
      font-size: 4em
  &.display2
    font-size: 4em;
    +above($med)
      font-size: 5em
  &.display3
    font-size: 5em;
    +above($med)
      font-size: 6em
  &.display4
    font-size: 6em;
    +above($med)
      font-size: 7em

h2
  font-size: 1.625em;
  &.fixed-size
    font-size: 1.625em !important;
  +above($med)
    font-size: 2em;
  +above($wide)
    font-size: 2.25em;

h3
  font-size: 1.375em;
  &.fixed-size
    font-size: 1.375em !important;
  +above($med)
    font-size: 1.5em;
  +above($wide)
    font-size: 1.75em;

h4
  font-size: 1.125em;

h5
  font-size: 0.83em;

h6
  font-size: 0.75em;


a
  cursor: pointer;

// Against BootStrap styling
label
  font-weight: normal !important;

div#react-root
  [data-reactroot]
    height: 100%;

// Remove spinner arrows on number input type field
input[type=number]-webkit-inner-spin-button,
input[type=number]-webkit-outer-spin-button
  -webkit-appearance none
  margin 0

input[type=number]
  -moz-appearancetextfield



*:focus
  outline none

.clear
  clear both

.bold
  font-weight: 400 !important;

.no-bold
  font-weight: 300 !important;

.active
  color: brand-primary !important;

.success
  color: brand-success;

.error
  color: brand-danger;

.warning
  color: brand-warning;

.body
  color: #444;

.normal
  opacity: 1;

.secondary
  opacity: 0.5

.disabled
  opacity 0.25

.mask1
  box-shadow: 0px 2px 40px 0px rgba(0,0,0,0.08);
  border-radius: 5px;
  padding: 20px;
  overflow: auto;
  background-color: white;
  > h1:first-child
    margin: 0;
    // padding-bottom: 20px;
    +above($med)
      padding-left: 20px;
  .primary-top
    display: inline-block;
    width: calc(100% + 40px);
    min-height: 300px;
    color: white;
    background-color: brand-primary;
    // padding: 0;
    padding: 20px;
    margin: 0;
    margin-left: -20px;
    margin-top: -20px;
    margin-bottom: 50px;
    h1, h2, h3, h4, p, div
      color: white;
      padding: 0;


.mask2
  box-shadow: 0px 20px 20px 0px rgba(0,0,0,0.08);
  border-radius: 5px;
  padding: 20px
  overflow: auto;
  background-color: white;


.mask3
  box-shadow: 0px 40px 40px 0px rgba(0,0,0,0.16);
  border-radius: 5px;
  padding: 20px
  overflow: auto;
  background-color: white;


.public-nav
  position relative;
  width: 100%
  z-index: z.nav;
  boxShadow: 0px 2px 40px 0px rgba(0,0,0,0.08);
  +above($med)
    position: fixed;


.side-nav
  height 100%
  padding 120px 0
  fixed top left
  width $side-nav
  background-color white
  box-shadow: 0px -2px 40px 0px rgba(0,0,0,0.08);
  z-index: z.nav
  ul.side-nav-list
    list-style: none;
    text-decoration: none !important;
    width: 100%;
    color: brand-success;
    margin: 0;
    padding: 0;
    li
      height: 70px;
      a
        height: 70px;
        display: flex;
        color: alpha(#222, 0.6);
        font-weight: 400 !important;
        text-decoration: none;
        &:hover
          text-decoration: none;
          border-left: solid 3px alpha(brand-primary, 0.3);
          transition: all 0.1s ease;
          color: alpha(#222, 0.8);
        &.active-link
          border-left: solid 3px brand-primary;
          color: alpha(#222, 1.0);
          h5
            color: brand-primary
        .icon
          display: inline-flex;
          align-items: center;
          padding: 0;
          color: inherit !important;
          width: 90px;
          justify-content: center;
          svg
            color: inherit !important;
        h5
          display: inline-flex;
          align-items: center;
          font-weight: 400 !important;
          max-width: 150px;
          overflow: hidden;
          text-overflow: ellipsis;
  img.logo
    position: absolute;
    width: $side-nav - 20px;
    top: 40px;
    left: 10px
  .logout
    position: absolute;
    bottom: 0;
    padding: 20px;
    width: 100%;
    background-color: white;
    z-index: 2;



.public-layout
  height: 100%; // fallback
  height: calc(100% - 86px); // to offset the not-fixed top nav
  +above($med)
    height: 100%;
    padding-top: 64px;

.app-layout
  padding: 20px;
  padding-top: 84px;
  padding-bottom $bottom-nav-height
  display: flex;
  flex-direction: column;
  overflow-y: scroll;
  height: auto;
  min-height: 100%;
  +above($med)
    padding-left 320px; // side-nav width + 20px
    padding-bottom 20px;
  +above($wide)
    padding-left: 350px;
    padding-right: 50px;
  &.always-side-nav
    padding-left: 270px; // side bar doesn't disappear
  .wrapper
    margin: auto 0;
  .transition-wrapper
    position: absolute;
    width: calc(100% - 40px);
    margin: auto;
    +above($med)
      width: calc(100% - 250px - 40px);
    +above($wide)
      width: calc(100% - 250px - 100px)


.full-screen
  width: 100%;
  min-height: 100%;


// Weird fix for safari, because of Material-UI textfield and react-text-mask placeholder misalignment
::-webkit-input-placeholder {
  line-height: normal;
}

// Show a highlight color when someone presses on the dropzone filepicker
.filepicker
  -webkit-tap-highlight-color: initial !important;

.no-decoration
  text-decoration: none;
  &:focus, &:active, &:hover, &:visited
    text-decoration: none;

// anti normalize-css() to display chart labels
svg:not(:root) {
  overflow: visible !important;
}


// Fix to remove firefox's annoying red box around invalid inputs
:invalid
  box-shadow: none;

.side-nav-user
  background-color: white;
  border-right: 1px solid grey;
  height: calc(100% - 64px);
  fixed bottom left;
  width: $side-nav;
  z-index: z.nav;
  display: flex;
  flex-direction: column;
  align-items: center;
  .link
    width: 100%;
    height: 64px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    color: alpha(#222, 0.6) !important;
    font-weight: 400;
    &:hover
      background-color: light-grey;
      color: alpha(#222, 0.8) !important;
    &.active-link
      background-color: grey3;
      color: alpha(#222, 1) !important;
    .icon
      padding: 0 16px;
      display: flex;
      align-items: center;
      svg
        color: inherit !important;
  .side-stepper
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
    margin-top: 16px;
    .top-title
      padding-left: 16px;
      margin: 0;
    .list
      list-style: none;
      display: flex;
      flex-direction: column;
      width: 100%;
      padding: 0;
      .step
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 0 16px;
        width: 100%;
        position: relative;
        &.active
          background-color: grey2;
        &:hover
          background-color: grey3;
        .top
          height: 64px;
          display: flex;
          justify-content: flex-start;
          align-items: center;
          cursor: pointer;
          width: 100%;
          .icon
            width: 32px;
            height: 32px;
            margin-right: 8px;
            background-color: grey;
            border-radius: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1;
          .text
            display: flex;
            flex-direction: column;
            .title
              font-weight: 400;
              color: #222;
            .subtitle
              color: grey;
        .absolute-line
          position: absolute;
          left: 32px;
          opacity: 0.5;
          height: 100%;
          border-right: solid 1px grey;
        &:first-child
          .absolute-line
            bottom: 0;
            height: calc(100% - 32px);
        &:last-child
          .absolute-line
            top: 0;
            height: calc(100% - 32px);
        .step-list
          padding: 0;
          padding-left: 16px;
          list-style: none;
          width: 100%;
          .item
            display: flex;
            align-items: center;
            justify-content: flex-start;
            text-decoration: none !important;
            height: 64px;
            width: 100%;
            border-left: 1px solid rgba(0,0,0,0);
            &:hover
              background-color: grey;
              cursor: pointer;
            .icon
              padding: 0 16px;
            .text
              display: flex;
              flex-direction: column;
              justify-content: center;
              overflow: hidden;
              .title
                font-weight: 400;
                color: #222;
                text-overflow: ellipsis;
                overflow: hidden;
                white-space: nowrap;
              .subtitle
                color: grey;
            &.active
              border-left: 1px solid brand-primary;
              .title
                color: brand-primary
