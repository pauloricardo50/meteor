$side-nav = 250px
$side-nav-large = 250px
$bottom-nav-height = 80px

body
  background-color backgroundcolor
  color black

a
  cursor: pointer;

.public-nav
  position relative;
  width: 100%
  z-index: z.nav;
  boxShadow: 0px 2px 40px 0px rgba(0,0,0,0.08);
  +above($med)
    position: fixed;


.side-nav
  height 100%
  padding 120px 0
  fixed top left
  width $side-nav
  background-color white
  box-shadow: 0px -2px 40px 0px rgba(0,0,0,0.08);
  z-index: z.nav
  ul.side-nav-list
    list-style: none;
    text-decoration: none !important;
    width: 100%;
    color: green;
    margin: 0;
    padding: 0;
    li
      height: 70px;
      a
        height: 70px;
        display: flex;
        color: alpha(black, 0.6);
        font-weight: 400 !important;
        &:hover
          text-decoration: none;
          border-left: solid 5px alpha(brand-primary, 0.3);
          transition: all 0.1s ease;
          color: alpha(black, 0.8);
        &.active-link
          border-left: solid 5px brand-primary;
          color: alpha(black, 1.0);
        .icon
          display: inline-flex;
          align-items: center;
          padding: 0 30px;
          color: inherit !important;
          svg
            color: inherit !important;
        h5
          display: inline-flex;
          align-items: center;
          font-weight: 400 !important;
          max-width: 150px;
  img
    position: absolute;
    width: $side-nav - 20px;
    top: 40px;
    left: 10px
    +above($large)
      width: $side-nav-large - 20px




.public-layout
  height: 100%; // fallback
  height: calc(100% - 86px); // to offset the not-fixed top nav
  +above($med)
    height: 100%;
    padding-top: 64px;

.user-layout
  lost-center: 95%;
  padding-top 20px
  padding-bottom $bottom-nav-height
  display: table;
  height: calc(100% - 66px); // To offset top bar on mobile
  +above($med)
    height: 100%;
    padding-top: 86px // To offset the fixed progress bar header, height + 20 px
    lost-center 95%
    padding-left $side-nav
    padding-bottom 0
  +above($large)
    lost-center 95%
    // margin-top 40px
    padding-left $side-nav-large
  &.admin
    padding-top: 20px; // no fixed top bar

.default-layout
  display: table;
  height: calc(100% - 66px); // To offset top bar on mobile
  padding: 20px;
  +above($med)
    height: 100%;
    padding-top: 86px;

.user-layout-center, .default-layout-center
  display: table-cell;
  vertical-align: middle;
  +above($med)
    padding-bottom: 50px;


.full-screen
  width: 100%;
  min-height: 100%;

// Against BootStrap styling
label
  font-weight: normal;


// Weird fix for safari, because of Material-UI textfield and react-text-mask placeholder misalignment
::-webkit-input-placeholder {
  line-height: normal;
}

// Show a highlight color when someone presses on the dropzone filepicker
.filepicker
  -webkit-tap-highlight-color: initial !important;

.no-decoration
  text-decoration: none;
  &:focus, &:active, &:hover, &:visited
    text-decoration: none;

// anti normalize-css() to display chart labels
svg:not(:root) {
  overflow: visible !important;
}
