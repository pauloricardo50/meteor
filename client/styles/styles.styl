.progressbar
  position relative
  width 100%
  height: 100%;
  z-index: z.header;
  color: white
  margin auto
  padding 0
  +above($med)
    width: 75%
    padding-bottom 0
  li
    list-style-type none
    position relative
    float left
    width 16.666% // MODIFY THIS To add more steps
    padding 19px 0;
    font-size 12pt;
    cursor: default;
    &:hover
      &.active, &.done
        -webkit-box-shadow: inset 0px -2px 0px alpha(brand-primary, 0.3);
        -moz-box-shadow: inset 0px -2px 0px alpha(brand-primary, 0.3);
        box-shadow: inset 0px -2px 0px alpha(brand-primary, 0.3);
    &:before
      color white
      width 24px
      height 24px
      line-height 24px
      display block
      text-align center
      margin auto auto auto auto
      border-radius 50%
      border: 2px solid #d8d8d8;
      background-color white
      color: #d8d8d8;
      box-sizing: content-box;
    &#progressStep1:before
      content "1"
    &#progressStep2:before
      content "2"
    &#progressStep3:before
      content "3"
    &#progressStep4:before
      content "4"
    &#progressStep5:before
      content "5"
    &#progressStep6:before
      border: none;
      font-family FontAwesome
      content "\f015"
      background-color: white
      color: #d8d8d8
      font-size 16pt
    &:after
      content ''
      position absolute
      width 100%
      height 3px
      background #d8d8d8
      top 31px // 15px + padding
      z-index -1
      left -50%
    &:first-child:after
      content none
    &.active
      cursor: pointer;
      &:before
        color: brand-primary;
        border-color: brand-primary;
    &.done
      cursor: pointer;
      &:before
        font-weight: normal;
        border-color: brand-success;
        color: brand-success;
        font-family FontAwesome
        content "\f00c" !important
    &.current
      -webkit-box-shadow: inset 0px -2px 0px brand-primary;
      -moz-box-shadow: inset 0px -2px 0px brand-primary;
      box-shadow: inset 0px -2px 0px brand-primary;


// Sets the color of the bar between the steps,
// twice the d8d8d8 color so that the gradient ends at 2/3rds of the length
.progressbar li.active + li:after
  background blue /* For browsers that do not support gradients */
  background -webkit-linear-gradient(left, blue , #D8D8D8, #D8D8D8) /* For Safari 5.1 to 6.0 */
  background -o-linear-gradient(right, blue, #D8D8D8, #D8D8D8) /* For Opera 11.1 to 12.0 */
  background -moz-linear-gradient(right, blue, #D8D8D8, #D8D8D8) /* For Firefox 3.6 to 15 */
  background linear-gradient(to right, blue , #D8D8D8, #D8D8D8) /* Standard syntax */

