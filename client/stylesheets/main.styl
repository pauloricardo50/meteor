$side-nav = 250px
$side-nav-large = 250px
$bottom-nav-height = 80px

body
  background-color backgroundcolor
  color black

a
  cursor: pointer;

.public-nav
  position relative;
  width: 100%
  z-index: z.nav;
  boxShadow: 0px 2px 40px 0px rgba(0,0,0,0.08);
  +above($med)
    position: fixed;


.side-nav
  fixed bottom left
  height $bottom-nav-height
  width 100%
  overflow hidden
  background-color white
  color black
  box-shadow: 0px -2px 40px 0px rgba(0,0,0,0.08);
  z-index: z.nav
  ul
    margin 0
    padding 0
    display flex
    justify-content space-between
    list-style none
  .start-nav
    &:hover
      color: black
  li
    width 33%
    a
      color: black
      text-decoration none
      padding 15px 15px
      display block
      text-align: center
      // trans()
      &:hover, &.active
        background-color: grey
  i
    display:block;
    font-size: 2em
    margin-bottom: 10px
  img
    position: absolute;
    width: $side-nav - 20px;
    top: 40px;
    left: 10px
    +above($large)
      width: $side-nav-large - 20px
  +above($med)
    height 100%
    z-index: z.nav // FLO, it was z.mid before
    padding 120px 0
    fixed top left
    width $side-nav
    box-shadow: 0px 2px 40px 0px rgba(0,0,0,0.08);
    a
      text-decoration: none;
    ul
      display block
      width: 200px
      margin-left: 25px
      border-radius: 5px
      padding: 15px;
      &:hover
        box-shadow: 0px 2px 40px 0px rgba(0,0,0,0.08);
        cursor: pointer
    li
      width auto
  +above($large)
    width $side-nav-large

.public-layout
  height: 100%; // fallback
  height: calc(100% - 86px); // to offset the not-fixed top nav
  +above($med)
    height: 100%;
    padding-top: 64px;

.user-layout
  lost-center 90%
  padding-top 20px
  padding-bottom $bottom-nav-height
  display: table;
  +above($med)
    padding-top: 86px // To offset the fixed progress bar header, height + 20 px
    lost-center 90%
    padding-left $side-nav
    padding-bottom 0
  +above($large)
    lost-center 90%
    // margin-top 40px
    padding-left $side-nav-large

.user-layout-center
  display: table-cell;
  vertical-align: middle;
  padding-bottom: 50px;


.full-screen
  width: 100%;
  min-height: 100%;

// Against BootStrap styling
