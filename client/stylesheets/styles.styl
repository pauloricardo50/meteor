// Progress Bar
.header-progressbar
  height 66px
  width 100%
  background-color: white;
  box-shadow: 0px 2px 40px 0px rgba(0,0,0,0.08);
  position relative;
  top 0
  left 0
  border none
  z-index: z.header;
  +above($med)
    position: fixed;
    margin-left: $side-nav
    // adjust the width and remove the side nav width, Replace with width! can't use variable
    /* Firefox */
    width: -moz-calc(100% - 250px);
    /* WebKit */
    width: -webkit-calc(100% - 250px);
    /* Opera */
    width: -o-calc(100% - 250px);
    /* Standard */
    width: calc(100% - 250px);
  +above($large)
    // margin-left $side-nav-large

.header-progress-menu
  position: absolute;
  top: 9px
  right: 9px

.progressbar
  position relative
  width 100%
  height: 100%;
  z-index: z.header;
  color: white
  margin auto
  padding 0
  +above($med)
    width: 75%
    padding-bottom 0
  li
    list-style-type none
    position relative
    float left
    width 16.666% // MODIFY THIS To add more steps
    // height: 100%;
    text-align center
    padding 18px
    font-size 12pt
    border-radius: 5px
    cursor: pointer
    &:hover
      background-color: #EEEEEE
      &#progressStep6:before
        background-color: #EEEEEE
        color: white
    &:before
      color white
      width 30px
      height 30px
      line-height 30px
      display block
      text-align center
      margin auto auto auto auto
      border-radius 50%
      background-color #D8D8D8
    &#progressStep1:before
      content "1"
    &#progressStep2:before
      content "2"
    &#progressStep3:before
      content "3"
    &#progressStep4:before
      content "4"
    &#progressStep5:before
      content "5"
    &#progressStep6:before
      font-family FontAwesome
      content "\f015"
      background-color: white
      color: #d8d8d8
      border-radius 0
      border none
      font-size 16pt
    &:after
      content ''
      position absolute
      width 100%
      height 3px
      background #D8D8D8
      top 31px // 15px + padding
      z-index -1
      left -50%
    &:first-child:after
      content none
    &.active
      &:before
        background-color blue
    &.done
      &:before
        background-color green
        font-family FontAwesome
        content "\f00c" !important


// Sets the color of the bar between the steps,
// twice the d8d8d8 color so that the gradient ends at 2/3rds of the length
.progressbar li.active + li:after
  background blue /* For browsers that do not support gradients */
  background -webkit-linear-gradient(left, blue , #D8D8D8, #D8D8D8) /* For Safari 5.1 to 6.0 */
  background -o-linear-gradient(right, blue, #D8D8D8, #D8D8D8) /* For Opera 11.1 to 12.0 */
  background -moz-linear-gradient(right, blue, #D8D8D8, #D8D8D8) /* For Firefox 3.6 to 15 */
  background linear-gradient(to right, blue , #D8D8D8, #D8D8D8) /* Standard syntax */

.progressbar li.done + li:after
  background-color green


