.header-nav
  color: white;
  width: auto;
  position: absolute;
  top: 0;
  right: 0;
  padding: 40px;
  margin: 0;
  z-index: z.nav
  &:hover
    color: lightness(white, 70%);
    cursor: pointer;


.user-layout
    lost-center 90%
    padding-top 20px
    padding-bottom $bottom-nav-height
    +above($med)
        lost-center 90%
        padding-left $side-nav
        padding-bottom 0
    +above($large)
        lost-center 80%
        margin-top 40px
        padding-left $side-nav-large

.side-nav
    fixed bottom left
    height $bottom-nav-height
    width 100%
    overflow hidden
    background black
    color #FFF
    z-index: z.nav
    shadow-level(2)
    ul
        margin 0
        padding 0
        display flex
        justify-content space-between
        list-style none
    li
        width 33.33%
    a
        color #FFF
        text-decoration none
        padding 15px 15px
        display block
        text-align center
        trans()
        &:hover, &.active
            background lightness(black, 30%)
    i
        display block
        font-size 2em
        margin-bottom 10px
    +above($med)
        height 100%
        z-index: z.nav // FLO, it was z.mid before
        padding 120px 0
        fixed top left
        width $side-nav
        ul
            display block
        li
            width auto
        a
            padding 20px 10px
            &:hover, &.active
                border-left 4px solid green
    +above($large)
        width $side-nav-large
        a
            padding 20px 20px
            &:hover, &.active
                border-left 10px solid green



