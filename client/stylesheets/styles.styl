  z-index: z.header;
  background: backgroundcolor;
  box-shadow 0px -1px 9px 0px rgba(0,0,0,0.50)
  margin 0
  padding 0
  +above($med)
    position fixed
    padding-left $side-nav
    padding-bottom 0
  +above($large)
    padding-left $side-nav-large
  li
    list-style-type none
    position relative
    float left
    width 20% // MODIFY THIS To add more steps
    text-align center
    padding 18px
    font-size 12pt
    &:before
      font-family FontAwesome
      color #D8D8D8
      width 30px
      height 30px
      line-height 30px
      border 2px solid #D8D8D8
      display block
      text-align center
      margin 0 auto 10px auto
      border-radius 50%
      background-color backgroundcolor
    &#progressStep1:before
      content "\f007"
    &#progressStep2:before
      content "\f00b"
    &#progressStep3:before
      content "\f155"
    &#progressStep4:before
      content "\f095"
    &#progressStep5:before
      content "\f015"
      border-radius 0
      border none
      font-size 16pt
    &:after
      content ''
      position absolute
      width 100%
      height 3px
      background #D8D8D8
      top 31px // 15px + padding
      z-index -1
      left -50%
    &:first-child:after
      content none
    &.active
      color blue
      &:before
        color blue
        border-color blue
    &.done
      color green
    &.done:before
      color green
      border-color green
      content "\f00c" !important


// Sets the color of the bar between the steps,
// twice the d8d8d8 color so that the gradient ends at 2/3rds of the length
.progressbar li.active + li:after
  background blue /* For browsers that do not support gradients */
  background -webkit-linear-gradient(left, blue , #D8D8D8, #D8D8D8) /* For Safari 5.1 to 6.0 */
  background -o-linear-gradient(right, blue, #D8D8D8, #D8D8D8) /* For Opera 11.1 to 12.0 */
  background -moz-linear-gradient(right, blue, #D8D8D8, #D8D8D8) /* For Firefox 3.6 to 15 */
  background linear-gradient(to right, blue , #D8D8D8, #D8D8D8) /* Standard syntax */

.progressbar li.done + li:after
  background-color green


